<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="arg-morph">
    <pipeline>
      <program name="lt-proc">
        <file name="arg.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="arg-gener">
    <pipeline>
      <program name="lt-proc -g">
        <file name="arg.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="arg-tagger">
    <pipeline>
      <program name="lt-proc">
        <file name="arg.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="arg.prob"/>
      </program>
    </pipeline>
  </mode>


</modes>
